<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LumosNew" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/transparency</item>
        <item name="colorPrimaryVariant">@color/transparency</item>
        <item name="colorOnPrimary">@color/transparency</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/transparency</item>
        <item name="colorSecondaryVariant">@color/transparency</item>
        <item name="colorOnSecondary">@color/transparency</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparency</item>
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>